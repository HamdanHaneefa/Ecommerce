<%- include("../../views/partials/user/header") %>

<style>
    body {
        font-family: 'Helvetica Neue', Arial, sans-serif;
        background-color: #f0f4f8;
        margin: 0;
        padding: 0;
    }

    .container-fluid {
        padding: 1.5rem; /* Reduced padding */
    }

    /* Order list container */
    .order-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem; /* Reduce gap between order cards */
    }

    /* Headings row */
    .order-headings {
        display: flex;
        font-weight: bold;
        padding: 0.75rem; /* Matching padding */
        background-color: #f8f9fa;
        border-radius: 12px;
        margin-bottom: 0.5rem; /* Spacing between headings and cards */
    }

    .order-headings div {
        flex: 1;
        text-align: center; /* Center-align headings */
    }

    /* Order card styles */
    .order-card {
        display: flex;
        align-items: center;
        border: 1px solid #ddd;
        border-radius: 12px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05); /* Softer shadow */
        padding: 0.75rem; /* Reduced padding */
        background-color: white;
        transition: transform 0.2s ease-in-out;
    }

    .order-card:hover {
        transform: scale(1.01);
    }

    /* Image styling */
    .product-image {
        width: 50px; /* Smaller fixed size for image */
        height: 50px;
        margin-right: 15px;
        border-radius: 8px;
        overflow: hidden; /* Ensure rounded corners */
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Ensure image covers the box */
    }

    /* Text and Info Styling */
    .order-details {
        flex: 1;
        display: flex;
        justify-content: space-between;
        text-align: center; /* Center-align content */
    }

    .order-details div {
        flex: 1;
    }

    .continue-shopping {
        margin-bottom: 1rem;
        padding: 0.5rem 1rem;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    .continue-shopping:hover {
        background-color: #0056b3;
    }

    /* New Red Returned Button Style */
    .returned-btn {
        background-color: #dc3545; /* Bootstrap danger color */
        color: white;
        border: none;
        border-radius: 5px;
        padding: 0.5rem 1rem;
        font-size: 0.875rem; /* Slightly smaller font */
        cursor: pointer;
        transition: background-color 0.2s;
        margin-right: 10px;
    }

    .returned-btn:hover {
        background-color: #c82333; /* Darker red on hover */
    }

    /* Mobile responsiveness */
    @media (max-width: 768px) {
        .order-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .order-details {
            flex-direction: column;
            align-items: flex-start;
        }

        .order-headings {
            display: none; /* Hide headings on mobile */
        }
    }
    .order-status {
    font-weight: bold; /* Bold text for visibility */
    text-transform: capitalize; /* Capitalize the first letter of each word */
    font-size: 14px; /* Standard font size */
}

/* Status styles */
.status-delivered {
    color: #4CAF50; /* Green for Delivered */
}

.status-shipped {
    color: #2196F3; /* Blue for Shipped */
}

.status-pending {
    color: #FFC107; /* Amber for Pending */
}

.status-return-pending {
    color: #FF9800; /* Orange for Return Pending */
}

.status-returned {
    color: #4CAF50; /* Red for Returned */
}

</style>

<div class="container-fluid">
    <div class="row">
        <%- include("../../views/partials/user/sidebar") %>

        <div class="col-md-9 mt-4">
            <h2 class="profile-page-title mb-4">Order History</h2>

            <!-- Continue Shopping Button -->
            <div class="text-left mb-3">
                <a href="/shop" class="btn btn-outline-secondary py-2 px-3">Continue Shopping</a>
            </div>

            <!-- Headings for Order Details -->
            <div class="order-headings d-flex justify-content-between mb-2">
                <div>Order ID</div>
                <div>Status</div>
                <div>Total Amount</div>
                <div>Items</div>
                <div>Date</div>
                <div>Actions</div>
            </div>

            <div class="order-list">
                <% if (orders.length === 0) { %>
                    <div class="no-orders">
                        <p>Your order history is empty. No orders found.</p>
                    </div>
                <% } else { %>
                    <% for (let i = 0; i < orders.length; i++) { %>
                        <div class="order-card d-flex align-items-start mb-1 p-2" data-order-id="<%= orders[i]._id %>">
                            <!-- Order Details -->
                            <div class="order-details d-flex justify-content-between w-100">
                                <!-- Order ID -->
                                <div class="product-id">
                                    <p class="mb-1"><%= orders[i]._id %></p>
                                </div>
            
                                <!-- Status -->
                                <div class="order-status">
                                    <% let statusClass; %>
                                    <% if (orders[i].status === 'Delivered') { %>
                                        <% statusClass = 'status-delivered'; %>
                                    <% } else if (orders[i].status === 'Shipped') { %>
                                        <% statusClass = 'status-shipped'; %>
                                    <% } else if (orders[i].status === 'Pending') { %>
                                        <% statusClass = 'status-pending'; %>
                                    <% } else if (orders[i].status === 'Return Request') { %>
                                        <% statusClass = 'status-return-pending'; %>
                                    <% } else if (orders[i].status === 'Returned') { %>
                                        <% statusClass = 'status-returned'; %>
                                    <% } else { %>
                                        <% statusClass = ''; %> <!-- Default class for other statuses, if needed -->
                                    <% } %>
                                    
                                    <p class="mb-1 <%= statusClass %>"><%= orders[i].status %></p>
                                </div>
 
                                <!-- Total Amount -->
                                <div class="order-total-amount">
                                    <p class="mb-1">â‚¹<%= orders[i].totalAmount %></p>
                                </div>
            
                                <!-- Items Count -->
                                <div class="order-item-count">
                                    <p class="mb-1"><%= orders[i].orderedItems.length %></p>
                                </div>
            
                                <!-- Order Date -->
                                <div class="order-date">
                                    <p class="mb-1"><%= new Date(orders[i].createdAt).toLocaleDateString() %></p>
                                </div>
            
                                <!-- Actions (View/Cancel/Return) -->
                                <div class="order-actions d-flex">
                                    <% if (orders[i].status === 'Cancelled') { %>
                                        <!-- Returned Button -->
                                        <button class="returned-btn" data-order-id="<%= orders[i]._id %>">Returned</button>
                                        <button class="btn btn-primary btn-sm view-btn" data-order-id="<%= orders[i]._id %>">View</button>
                                    <% }
                                    else if (orders[i].status === 'Return Request') { %>
                                        <button class="btn btn-primary btn-sm view-btn" data-order-id="<%= orders[i]._id %>">View</button>
                                        <button class="btn btn-danger btn-sm  ml-2" data-order-id="<%= orders[i]._id %>">Return Pending</button>
                                    <% }
                                    else if (orders[i].status === 'Returned') { %>
                                        <button class="btn btn-primary btn-sm view-btn" data-order-id="<%= orders[i]._id %>">View</button>
                                        <button class="btn btn-success btn-sm ml-2" data-order-id="<%= orders[i]._id %>">Returned</button>
                                    <% }
                                     else { %>
                                        <button class="btn btn-primary btn-sm view-btn" data-order-id="<%= orders[i]._id %>">View</button>
                                        <button class="btn btn-danger btn-sm cancel-btn ml-2" data-order-id="<%= orders[i]._id %>">Return</button>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>         
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function() {
        // View Button Click Event
        $(document).on('click', '.view-btn', function() {
            const orderId = $(this).data('order-id');
            window.location.href = '/order/details/' + orderId;
        });

        // Cancel Button Click Event
        $(document).on('click', '.cancel-btn', function(event) {
            event.stopPropagation();
            const orderId = $(this).data('order-id');

            Swal.fire({
                title: 'Confirmation Required',
                text: "This action cannot be undone. Are you sure you want to proceed?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/return-order',
                        type: 'POST',
                        data: { orderId: orderId },
                        success: function(response) {
                            Swal.fire(
                                'Return Request Submitted',
                                'Your order has been successfully requested for return.',
                                'success'
                            );
                            window.location.reload();
                        },
                        error: function(xhr, status, error) {
                            Swal.fire(
                                'Error!',
                                'There was an error canceling your order. Please try again.',
                                'error'
                            );
                        }
                    });
                }
            });
        });
    });
</script>

