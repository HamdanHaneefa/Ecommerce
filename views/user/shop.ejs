<%- include("../../views/partials/user/header") %>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <!-- PRODUCTS DETAILS -->
            <div class="col-md-8 col-lg-10 order-md-last">
                <div class="row">
                    <% for (let i = 0; i < products.length; i++) { %> <!-- Loop through each product -->
                        <div class="col-sm-12 col-md-12 col-lg-4 ftco-animate d-flex">
                            <div class="product d-flex flex-column">
                                <a href="/product/<%= products[i]._id %>" class="img-prod">
                                    <img class="img-fluid" src="/uploads/product-images/<%= products[i].ProductImage %>" alt="<%= products[i].productName %>">
                                    <div class="overlay"></div>
                                </a>
                                <div class="text py-3 pb-4 px-3">
                                    <div class="d-flex justify-content-between">
                                        <div class="cat">
                                            <span><%= products[i].brand %></span>
                                        </div>
                                        <div class="wishlist">
                                            <a href="#" class="wishlist-button" title="Add to Wishlist">
                                                <span class="ion-ios-heart-outline"></span>
                                            </a>
                                        </div>
                                    </div>
                                    <h3><a href="#"><%= products[i].productName %></a></h3> 
                                    <div class="pricing">
                                        <p class="price">
                                            <span class="price-sale">â‚¹<%= products[i].price %></span> 
                                        </p>
                                    </div>
                                    <p class="bottom-area d-flex px-3">
                                        <!-- <a href="#" class="add-to-cart text-center py-2 mr-1"><span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
                                        <a href="#" class="buy-now text-center py-2">Buy now<span><i class="ion-ios-cart ml-1"></i></span></a> -->
                                    </p>
                                </div>
                            </div>
                        </div>
                    <% } %> <!-- End product loop -->
                </div>
            </div>

            <!-- CATEGORIES  -->
            <div class="col-md-4 col-lg-2">
                <div class="sidebar">
                    <div class="sidebar-box-2">
                        <h2 class="heading">Categories</h2>
                        <div class="fancy-collapse-panel">
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Brand
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <ul class="brand-list">
                                                <% brands.forEach(brand => { %>
                                                    <li><a href="/shop?brandSort=<%= brand._id %>"><%= brand.name %></a></li>                                               
                                                <% }); %>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingTwo">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Connection Type
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                        <div class="panel-body">
                                            <ul>
                                                <li><a href="#">Wireless</a></li>
                                                <li><a href="#">True Wireless</a></li>
                                                <li><a href="#">Wired</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingThree">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">Type
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                                        <div class="panel-body">
                                            <ul>
                                                <li><a href="#">In-Ear</a></li>
                                                <li><a href="#">On-Ear</a></li>
                                                <li><a href="#">Over-Ear</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingFour">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">Price and Others
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFour">
                                        <div class="panel-body">
                                            <ul class="filter-list">
                                                <li><a href="/shop?sort=default">Default</a></li>
                                                <li><a href="/shop?sort=priceHigh">High to Low</a></li>
                                                <li><a href="/shop?sort=priceLow">Low to High</a></li>
                                                <li><a href="/shop?sort=newArrivals">New Arrivals</a></li>
                                                <li><a href="/shop?sort=aToZ">A-Z</a></li>
                                                <li><a href="/shop?sort=zToA">Z-A</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include("../../views/partials/user/footer") %>
