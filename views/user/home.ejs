			<div class="container">
    			<div class="row">
    			    <% for (let i = 0; i < products.length; i++) { %> <!-- Loop through the products array using for loop -->
    			        <div class="col-sm-12 col-md-6 col-lg-3 d-flex">
    			            <div class="product d-flex flex-column">
    			                <!-- Product image and overlay -->
    			                <a href="/product/<%= products[i]._id %>" class="img-prod">
    			                    <img class="img-fluid" src="/uploads/product-images/<%= products[i].ProductImage %>" alt="<%= products[i].productName %>">
    			                    <div class="overlay"></div>
    			                    <% if (products[i].effectiveOffer > 0) { %>
    			                        <div class="offer-label">Offer: <%= products[i].effectiveOffer %>% Off</div>
    			                    <% } %>
    			                </a>
    			                <!-- Product details -->
    			                <div class="text py-3 pb-4 px-3">
    			                    <div class="d-flex justify-content-between">
    			                        <div class="cat">
    			                            <span><%= products[i].brand %></span>
    			                        </div>
    			                        <div class="wishlist">
    			                            <a href="#" class="wishlist-button" title="Add to Wishlist">
    			                                <span class="ion-ios-heart-outline"></span>
    			                            </a>
    			                        </div>
    			                    </div>
    			                    <h3><a href="/product/<%= products[i]._id %>"><%= products[i].productName %></a></h3>
    			                    <div class="pricing">
    			                        <p class="price">
    			                            <% if (products[i].effectiveOffer > 0) { %>
    			                                <span class="price-original" style="text-decoration: line-through; color: #888;">
    			                                    ₹<%= products[i].price %>
    			                                </span>
    			                                <span class="price-effective" style="font-weight: bold; color: #d9534f;">
    			                                    ₹<%= products[i].variants[0].salePrice %>
    			                                </span>
    			                            <% } else { %>
    			                                <span class="price-original" style="color: #888;">
    			                                    ₹<%= products[i].price %>
    			                                </span>
    			                            <% } %>
    			                        </p>
    			                    </div>
    			                    <p class="bottom-area d-flex px-3">
    			                        <!-- Add to cart or Buy now buttons can go here if needed -->
    			                    </p>
    			                </div>
    			            </div>
    			        </div>
    			    <% } %> <!-- End of product loop -->
    			</div>
