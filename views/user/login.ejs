<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="user/css/login.css">
  <title>Login</title>
</head>
<body>
  <div class="container">
    <h1>Login</h1>
    <div class="signup-link">
      Not a member yet? <a href="/signup">Sign Up</a>
    </div>
    <form id="loginform" method="post" action="/login">
      <div class="form-group">
        <label for="email">Email ID:</label>
        <input type="text" id="email" name="email" placeholder="Enter your email ID" value="hamdanhaneefa23@gmail.com">
      </div>

      <div class="form-group">
        <label for="password">Password:</label>
        <input type="text" id="password" name="password" placeholder="Enter your password" value="h12345678">
      </div>

      <% if (typeof error_msg !== 'undefined') { %>
        <div class="alert alert-danger"><%= error_msg %></div>
      <% } %>
      <% if (typeof success_msg !== 'undefined') { %>
        <div class="alert alert-success"><%= success_msg %></div>
      <% } %>

      <div class="forgot-password">
        <a href="/forgot-password">Forgot Password?</a>
      </div>

      <a id="google-auth" href="/auth/google">
        <div class="login-google signup-google">
          <img src="user/images/google.png" alt="Google Logo">
          Login with Google
        </div>
      </a>

      <div class="button-group">
        <button type="submit">Login</button>
      </div>
    </form>

    <div class="terms">
      By logging in, you agree to our <a href="#">Terms of Use</a> & <a href="#">Privacy Policy</a>
    </div>
  </div>
  <script src="js/error-fade.js"></script>
  
</body>
</html>
